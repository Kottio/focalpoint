generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  email         String   @unique
  emailVerified Boolean  @default(false) @map("email_verified")
  name          String?
  image         String?

  // Your custom fields
  username  String? @unique
  fullName  String? @map("full_name")
  bio       String?
  avatarUrl String? @map("avatar_url")

  // Your existing relations
  spots  Spot[]
  photos Photo[]
  votes  Vote[]

  // Better Auth relations
  sessions      Session[]
  accounts      Account[]
  verifications Verification[]
  SpotComment   SpotComment[]
  SavedSpots    SavedSpot[]
  PhotoBatch    PhotoBatch[]

  @@map("users")
}

model SavedSpot {
  id      Int      @id @default(autoincrement())
  userId  String
  spotId  Int
  savedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  spot Spot @relation(fields: [spotId], references: [id], onDelete: Cascade)

  @@unique([userId, spotId])
  @@index([userId])
  @@index([spotId])
}

model Spot {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  title       String
  description String?
  latitude    Decimal  @db.Decimal(10, 8)
  longitude   Decimal  @db.Decimal(11, 8)

  // Foreign Keys
  userId     String? @map("user_id")
  categoryId Int     @map("category_id")

  // Relations
  user        User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  category    Category      @relation(fields: [categoryId], references: [id])
  spotTags    SpotTag[]
  photos      Photo[]
  votes       Vote[]
  SpotDetails SpotDetails[]
  SpotComment SpotComment[]
  SavedSpot   SavedSpot[]
  PhotoBatch  PhotoBatch[]

  @@map("spots")
}

model SpotComment {
  id        Int      @id @default(autoincrement())
  spotId    Int      @map("spot_id")
  comment   String   @db.Text
  userId    String?  @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  likes     Int      @default(0)

  spot Spot  @relation(fields: [spotId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([spotId])
  @@index([userId])
  @@map("spot_comments")
}

model SpotDetails {
  id             Int     @id @default(autoincrement())
  spotId         Int     @map("spot_id")
  idealTime      Int[]
  idealWeather   String?
  friendlyIndice Int?
  metadata       Json?

  spot Spot @relation(fields: spotId, references: [id], onDelete: Cascade)

  @@map("spot_details")
}

model Category {
  id          Int     @id @default(autoincrement())
  slug        String  @unique
  name        String
  description String?
  icon        String?
  // Relations
  spots       Spot[]

  @@map("categories")
}

model Tag {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  color    String    @default("#3B82F6")
  // Relations
  spotTags SpotTag[]

  @@map("tags")
}

// Junction table for many-to-many relationship between Spots and Tags
model SpotTag {
  spotId Int  @map("spot_id")
  tagId  Int  @map("tag_id")
  // Relations
  spot   Spot @relation(fields: [spotId], references: [id], onDelete: Cascade)
  tag    Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([spotId, tagId])
  @@map("spot_tags")
}

model Photo {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")

  title       String?
  description String?
  isPrimary   Boolean  @default(false) @map("is_primary")
  likes       Int      @default(0)
  userIdLiked String[] @default([])

  // Urls
  originalUrl  String
  publicId     String
  thumbnailUrl String?
  mediumUrl    String?

  // Foreign Keys
  spotId  Int    @map("spot_id")
  userId  String @map("user_id")
  batchId Int?   @map("batch_id")

  // Relations
  spot       Spot        @relation(fields: [spotId], references: [id], onDelete: Cascade)
  user       User?       @relation(fields: [userId], references: [id], onDelete: Cascade)
  photoBatch PhotoBatch? @relation(fields: [batchId], references: [id], onDelete: SetNull)

  @@map("photos")
}

model PhotoBatch {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")

  title       String?
  description String?

  // Foreign Keys
  spotId Int    @map("spot_id")
  userId String @map("user_id")

  // Relations
  photos Photo[]
  spot   Spot    @relation(fields: [spotId], references: [id], onDelete: Cascade)
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("photo_batches")
}

// For future community features (upvotes/downvotes)
model Vote {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  voteType  VoteType @map("vote_type")

  // Foreign Keys
  spotId Int     @map("spot_id")
  userId String? @map("user_id")

  // Relations
  spot Spot  @relation(fields: [spotId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Prevent duplicate votes from same user on same spot
  @@unique([spotId, userId])
  @@map("votes")
}

enum VoteType {
  UP
  DOWN
}

model Session {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  token     String   @unique
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("sessions")
}

model Account {
  id           String    @id @default(cuid())
  userId       String    @map("user_id")
  accountId    String    @map("account_id")
  providerId   String    @map("provider_id")
  accessToken  String?   @map("access_token")
  refreshToken String?   @map("refresh_token")
  idToken      String?   @map("id_token")
  expiresAt    DateTime? @map("expires_at")
  password     String?
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
  @@map("accounts")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime @map("expires_at")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  userId String? @map("user_id")
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([identifier])
  @@index([userId])
  @@index([expiresAt])
  @@map("verifications")
}
