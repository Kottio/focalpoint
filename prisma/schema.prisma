generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  email      String   @unique
  username   String   @unique
  fullname   String?
  bio        String?
  avatar_url String?
  spots      Spots[]
}

model Spots {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updated_at  DateTime @default(now())
  lattitude   Decimal
  longitude   Decimal
  description String
  category_id Int
  userId      Int?
  User        User?    @relation(fields: [userId], references: [id])
  tags        String[]
}

model Categories {
  id Int @id @default(autoincrement())
}
